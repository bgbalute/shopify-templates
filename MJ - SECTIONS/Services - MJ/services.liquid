{% render 'padding' %}

{{ 'services.css' | asset_url | stylesheet_tag }}

<div class="page-width ">
    <div class="services section-{{ section.id }}-padding">
        <h2 class="title h1">{{ section.settings.services_title }}</h2>
        <div class="services-section">
            <a class="services-item" href="{{ section.settings.service_link1 }}">
                <img class="services-item__image" src="{{ section.settings.service_image1 | img_url: '250x' }}" alt="">
                <p class="services-item__title">{{ section.settings.service_title1 }}</p>
            </a>
            <a class="services-item" href="{{ section.settings.service_link2 }}">
                <img class="services-item__image" src="{{ section.settings.service_image2 | img_url: '250x' }}" alt="">
                <p class="services-item__title">{{ section.settings.service_title2 }}</p>
            </a>
            <a class="services-item" href="{{ section.settings.service_link3 }}">
                <img class="services-item__image" src="{{ section.settings.service_image3 | img_url: '250x' }}" alt="">
                <p class="services-item__title">{{ section.settings.service_title3 }}</p>
            </a>
        </div>
    </div>
</div>
{% schema %}
    {
    "name": "CS - Services",
    "settings": [
        {
            "type": "text",
            "id": "services_title",
            "label": "Service Title",
            "default": "WHAT I DO"
        },
        {
            "type": "header",
            "content": "Service 1"
        },
        {
            "type": "image_picker",
            "id": "service_image1",
            "label": "Image"
        },
        {
            "type": "text",
            "id": "service_title1",
            "label": "Title",
            "default": "FINANCIAL POLICIES & PROCEDURE"
        },
        {
            "type": "url",
            "id": "service_link1",
            "label": "Link"
        },
        {
            "type": "header",
            "content": "Service 2"
        },
        {
            "type": "image_picker",
            "id": "service_image2",
            "label": "Image"
        },
        {
            "type": "text",
            "id": "service_title2",
            "label": "Title",
            "default": "BOOKKEEPING & ACCOUNTING"
        },
        {
            "type": "url",
            "id": "service_link2",
            "label": "Link"
        },
        {
            "type": "header",
            "content": "Service 3"
        },
        {
        "type": "image_picker",
        "id": "service_image3",
        "label": "Image"
        },
        {
        "type": "text",
        "id": "service_title3",
        "label": "Title",
        "default": "TAX STRATEGY"
        },
        {
        "type": "url",
        "id": "service_link3",
        "label": "Link"
        },
        {
           "type": "header",
           "content": "Section Padding"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 36
        }
    ],
    "presets": [
        {
            "name":"Services"
        }
    ]
    }
{% endschema %}
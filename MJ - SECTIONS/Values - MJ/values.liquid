{% render 'padding' %}

{{ 'values.css' | asset_url | stylesheet_tag }}

<div class="page-width ">
    <div class="values section-{{ section.id }}-padding">
        <h2 class="title h1 mt0">{{ section.settings.values_title }}</h2>
        <div class="values-section">
            <div class="values-container">
                <div class="values-heading">
                    <img class="values-img" src="{{section.settings.mission_image | image_url: width: '30x' }}" alt="">
                    <p class="values-title">Mission</p>
                </div>
                <div class="values-content">
                    <p>{{ section.settings.mission_content }}</p>
                </div>
            </div>
            <div class="values-container">
                <div class="values-heading">
                    <img class="values-img" src="{{section.settings.vision_image | image_url: width: '30x' }}" alt="">
                    <p class="values-title">Vision</p>
                </div>
                <div class="values-content">
                    <p>{{ section.settings.vision_content }}</p>
                </div>
            </div>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "CS - Values",
    "tag": "section",
    "class": "section",
    "settings": [
        {
           "type": "text",
           "id": "values_title",
           "default": "My Values",
           "label": "Heading"
        },
        {
           "type": "header",
           "content": "Mission"
        },
        {
           "type": "image_picker",
           "id": "mission_image",
           "label": "Mission Icon"
        },
        {
           "type": "textarea",
            "id": "mission_content",
            "default": "(Insert Mission Here)",
            "label": "Mission"
        },
        {
           "type": "header",
           "content": "Vision"
        },
        {
           "type": "image_picker",
           "id": "vision_image",
           "label": "Vision Icon"
        },
        {
            "type": "textarea",
            "id": "vision_content",
            "default": "(Insert Vision Here)",
            "label": "Vision"
        },
        {
           "type": "header",
           "content": "Section Padding"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 36
        }
   ],
    "presets": [
      {
          "category": "Custom Section",
          "name":"Values"
      }
  ]
}
{% endschema %}